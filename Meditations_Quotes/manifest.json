{
    "manifest_version": 3,
    "name": "Meditations Quotes",
    "version": "1.0",
    "description": "Get inspired by quotes from Marcus Aurelius' Meditations.",
    "icons": {
      "48": "icon.png"
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html",
      "default_title": "Click to get inspired!"
    },
    "permissions": [
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  